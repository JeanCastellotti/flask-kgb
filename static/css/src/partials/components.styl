.table
    width 100%
    padding 1.6rem
    border-radius 8px
    background $color-gray-10
    border 1px solid $color-gray-40
    box-shadow 0 2px 0 0 rgba(0, 0, 0, .1)

    th
        color $color-gray-100
        text-align left
        padding 2rem 1rem   
        font-weight 600
        border-bottom 1px solid $color-gray-20

    td
        color $color-gray-60
        padding 2rem 1rem

        a
            color $color-gray-60
            font-weight 600
            display inline-block
            width 100%

    tbody
        tr:hover
            background $color-gray-20

.card
    padding 1.6rem
    border-radius 8px
    background $color-gray-10
    border 1px solid $color-gray-40
    box-shadow 0 2px 0 0 rgba(0, 0, 0, .1)
    transition transform 0.2s, box-shadow 0.2s
    &:hover
        transform translateY(-2px)
        box-shadow 0 4px 0 0 rgba(0, 0, 0, .1)

.btn
    display inline-block
    background $color-gray-10
    border 1px solid $color-gray-50
    color $color-gray-80
    font-family inherit
    font-size $font-size-sm
    font-weight 600
    border-radius 4px
    padding 5px 1.2rem
    width auto !important
    cursor pointer
    box-shadow 0 -2px 0 0 inset $color-gray-40, 0 1px 0 0 inset $color-white
    transition all .2s
    &:hover
        transform translateY(1px)
        box-shadow 0 -1px 0 0 inset $color-gray-40, 0 1px 0 0 inset $color-gray-10

    &--warning
        background $color-orange-50
        border 1px solid $color-orange-100
        color $color-white!important
        box-shadow 0 -2px 0 0 inset $color-orange-100
        &:hover
            box-shadow none

    &--danger
        background $color-red-50
        border 1px solid $color-red-100
        color $color-white
        box-shadow 0 -2px 0 0 inset $color-red-100
        &:hover
            box-shadow none

.alert 
    border-radius 8px
    padding 2.5rem
    color $color-white
    position absolute
    bottom 3rem
    left 50%
    transform translateX(-50%)
    display flex
    align-items center
    justify-content space-between
    min-width 76.8rem
    @media (max-width: 48em)
        position static
        min-width auto
        transform translateX(0)
        margin 0 1.5rem
        margin-bottom 5rem

    & svg 
        height 2.5rem
        width 2.5rem
        cursor pointer
        color rgba($color-white,.7)

        &:hover 
            color rgba($color-white,.9)   

    &-danger 
        background-color $color-red-50
        border 1px solid $color-red-100    
        box-shadow 0 -2px 0 0 inset $color-red-100

    &-success 
        background-color $color-green-50
        border 1px solid $color-green-100  
        box-shadow 0 -2px 0 0 inset $color-green-100  

    &-warning 
        background-color $color-orange-50
        border 1px solid $color-orange-100  
        box-shadow 0 -2px 0 0 inset $color-orange-100

.form
    width 100%
    
    div
        margin-bottom 1.6rem

    label
        display block
        color $color-gray-80
        margin-bottom 1rem

    input, select, textarea
        padding 1.5rem
        border-radius 4px
        color $color-gray-60
        font-family inherit
        font-size inherit
        border 1px solid $color-gray-50
        width 100%
        &:focus
            border-color $color-gray-80
            box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05) 

    textarea
        resize none
        height 20rem

    small
        display inline-block
        margin-top .5rem
        color $color-red-100
        font-size $font-size-sm

    button,
    input[type='submit']
        display inline-block
        background $color-gray-10
        border 1px solid $color-gray-50
        color $color-gray-80
        font-family inherit
        font-weight 600
        font-size inherit
        border-radius 4px
        padding 5px 1.2rem
        width auto !important
        cursor pointer
        box-shadow 0 -2px 0 0 inset $color-gray-40, 0 1px 0 0 inset $color-white
        transition all .2s
        &:hover
            transform translateY(1px)
            box-shadow 0 -1px 0 0 inset $color-gray-40, 0 1px 0 0 inset $color-gray-10

.placeholder
    display block
    padding 1.6rem
    border-radius 8px
    background $color-gray-10
    border 1px solid $color-gray-40
    box-shadow 0 2px 0 0 rgba(0, 0, 0, .1)
    text-align center
    color $color-gray-50

.badge 
    display inline-block
    color $color-white
    font-size $font-size-xs
    border-radius 4px
    font-weight 600
    padding 5px 8px

    &--info
        background-color $color-info-50
        border 1px solid $color-info-100

    &--danger 
        background-color $color-red-50
        border 1px solid $color-red-100

    &--success 
        background-color $color-green-50
        border 1px solid $color-green-100  

    &--warning 
        background-color $color-orange-50
        border 1px solid $color-orange-100

.grid
    display grid
    gap 1.6rem
    grid-template-columns repeat(2, 1fr)
    @media (max-width: 768px)
        grid-template-columns 1fr

.modal
    display flex
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    z-index 100
    background rgba(0,0,0,.6)
    &-inner
        padding 1.5rem
        border-radius 8px
        background $color-white
        margin auto
    &-message
        display inline-block
        margin-bottom 1.6rem

    button:not(:last-child)
        margin-right 1rem

[x-cloak]
    display none

.pages
    margin-top 1.6rem
    display flex
    &-item
        display inline-block
        color $color-gray-80
        padding 1rem 1.6rem
        border-radius 8px
        background $color-gray-10
        border 1px solid $color-gray-40
        &:not(:last-child)
            margin-right 1rem
        &:hover,
        &.active
            background $color-gray-40
        